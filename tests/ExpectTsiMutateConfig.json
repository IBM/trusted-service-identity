{
    "InitContainers": [
        {
            "name": "jwt-init",
            "image": "tsidentity/ti-jwt-sidecar:v1.8.4",
            "env": [
                {
                    "name": "HOST_IP",
                    "valueFrom": {
                        "fieldRef": {
                            "fieldPath": "status.hostIP"
                        }
                    }
                },
                {
                    "name": "IS_SIDECAR",
                    "value": "false"
                },
                {
                    "name": "JWT_TTL_SEC",
                    "value": "60"
                },
                {
                    "name": "VAULT_ADDR",
                    "value": "http://tsi-test2-5240a919746a818fd9d58aa25c34ecfe-0000.eu-de.containers.appdomain.cloud"
                },
                {
                    "name": "SECRET_REFRESH_SEC",
                    "value": "600"
                },
                {
                    "name": "IDENTITY_REFRESH_SEC",
                    "value": "600"
                }
            ],
            "resources": {},
            "volumeMounts": [
                {
                    "name": "tsi-secrets",
                    "mountPath": "/usr/share/secrets/tsi-secrets"
                },
                {
                    "name": "tsi-sockets",
                    "mountPath": "/host/sockets"
                },
                {
                    "name": "pod-metadata",
                    "readOnly": true,
                    "mountPath": "/pod-metadata"
                },
                {
                    "name": "host-machineid",
                    "readOnly": true,
                    "mountPath": "/host/machineid"
                }
            ],
            "imagePullPolicy": "Always",
            "securityContext": {
                "runAsUser": 0
            }
        }
    ],
    "SidecarContainers": [
        {
            "name": "jwt-sidecar",
            "image": "tsidentity/ti-jwt-sidecar:v1.8.4",
            "env": [
                {
                    "name": "HOST_IP",
                    "valueFrom": {
                        "fieldRef": {
                            "fieldPath": "status.hostIP"
                        }
                    }
                },
                {
                    "name": "IS_SIDECAR",
                    "value": "true"
                },
                {
                    "name": "JWT_TTL_SEC",
                    "value": "60"
                },
                {
                    "name": "VAULT_ADDR",
                    "value": "http://tsi-test2-5240a919746a818fd9d58aa25c34ecfe-0000.eu-de.containers.appdomain.cloud"
                },
                {
                    "name": "SECRET_REFRESH_SEC",
                    "value": "600"
                },
                {
                    "name": "IDENTITY_REFRESH_SEC"
                }
            ],
            "resources": {},
            "volumeMounts": [
                {
                    "name": "tsi-secrets",
                    "mountPath": "/usr/share/secrets/tsi-secrets"
                },
                {
                    "name": "tsi-sockets",
                    "mountPath": "/host/sockets"
                },
                {
                    "name": "pod-metadata",
                    "readOnly": true,
                    "mountPath": "/pod-metadata"
                },
                {
                    "name": "host-machineid",
                    "readOnly": true,
                    "mountPath": "/host/machineid"
                }
            ],
            "imagePullPolicy": "Always",
            "securityContext": {
                "runAsUser": 0
            }
        }
    ],
    "Volumes": [
        {
            "name": "tsi-secrets",
            "emptyDir": {}
        },
        {
            "name": "tsi-sockets",
            "hostPath": {
                "path": "/var/tsi-secure/sockets",
                "type": "Directory"
            }
        },
        {
            "name": "host-machineid",
            "hostPath": {
                "path": "/etc/machine-id",
                "type": "File"
            }
        },
        {
            "name": "pod-metadata",
            "downwardAPI": {
                "items": [
                    {
                        "path": "tsi-secrets",
                        "fieldRef": {
                            "fieldPath": "metadata.annotations['tsi.secrets']"
                        }
                    },
                    {
                        "path": "tsi-identities",
                        "fieldRef": {
                            "fieldPath": "metadata.annotations['tsi.identities']"
                        }
                    },
                    {
                        "path": "ti-identity",
                        "fieldRef": {
                            "fieldPath": "metadata.annotations['admission.trusted.identity/ti-identity']"
                        }
                    },
                    {
                        "path": "ti-pod-name",
                        "fieldRef": {
                            "fieldPath": "metadata.name"
                        }
                    },
                    {
                        "path": "ti-pod-namespace",
                        "fieldRef": {
                            "fieldPath": "metadata.namespace"
                        }
                    },
                    {
                        "path": "tsi-images",
                        "fieldRef": {
                            "fieldPath": "metadata.annotations['admission.trusted.identity/tsi-images']"
                        }
                    },
                    {
                        "path": "tsi-cluster-name",
                        "fieldRef": {
                            "fieldPath": "metadata.annotations['admission.trusted.identity/tsi-cluster-name']"
                        }
                    },
                    {
                        "path": "tsi-region",
                        "fieldRef": {
                            "fieldPath": "metadata.annotations['admission.trusted.identity/tsi-region']"
                        }
                    }
                ]
            }
        }
    ],
    "AddVolumeMounts": [
        {
            "name": "tsi-secrets",
            "readOnly": true,
            "mountPath": "/tsi-secrets"
        }
    ],
    "Annotations": {}
}
